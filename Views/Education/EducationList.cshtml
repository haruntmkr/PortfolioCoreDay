@model List<Education>
@{
	ViewData["Title"] = "EducationList";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}


<h4>Eğitimlerim</h4>

<div class="content">
	<div class="container-fluid">

		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title"></div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Eğitimlerle ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Bölüm</th>
									<th scope="col">Üniversite</th>
									<th scope="col">Fakülte</th>
									<th scope="col">Tarih</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>

								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Title</td>
										<td>@item.University</td>
										<td>@item.Departmant</td>
										<td>@item.EducationDate</td>
										<td><a href="/Education/DeleteEducation/@item.EducationId" class="btn btn-danger">Sil</a></td>
										<td><a href="/Education/UpdateEducation/@item.EducationId" class="btn btn-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Education/CreateEducation" class="btn btn-info">Yeni Eğitim Girişi</a>
					</div>
				</div>


			</div>
		</div>
	</div>
</div>
