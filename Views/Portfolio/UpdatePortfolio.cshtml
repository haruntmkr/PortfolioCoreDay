@model Portfolio
@{
    ViewData["Title"] = "UpdatePortfolio";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h4 class="page-title">Proje Güncelleme</h4>

<div class="content">
	<div class="container-fluid">

		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Deneyim Güncelleme Sayfası</div>
					</div>
					<div class="card-body">

						<form method="post">
							<input type="hidden" asp-for="PortfolioId" />
							<label>Proje Başlığı</label>
							<input type="text" asp-for="Title" class="form-control" style="border:1px solid black" />
							<br />
							<label>Github Urli</label>
							<input type="text" asp-for="Githuburl" class="form-control" style="border:1px solid black" />
							<br />
							<label>Tarih Aralığı</label>
							<input type="text" asp-for="Imageurl" class="form-control" style="border:1px solid black" />
							<br />
							<label>Proje Kategorisi</label>
							<select asp-for="CategoryId" asp-items="ViewBag.v" class="form-control" style="border:1px solid black">
								<option value="">--Kategori Seçiniz--</option>
							</select>
							<br />
							<label>Açıklama</label>
							<textarea rows="4" class="form-control" asp-for="Description" class="form-control" style="border:1px solid black"></textarea>
							<br />
							<button class="btn btn-warning">Deneyimi Güncelle</button>
						</form>

					</div>
				</div>


			</div>
		</div>
	</div>
</div>

