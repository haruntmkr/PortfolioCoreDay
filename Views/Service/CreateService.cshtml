@model Service
@{
    ViewData["Title"] = "CreateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h4>Hizmet Ekleyiniz</h4>

<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title"></div>
					</div>
					<div class="card-body">

						<form method="post">

							<input type="hidden" asp-for="ServiceId" />
							<br />
							<label>Hizmet Adı</label>
							<input type="text" asp-for="Title" class="form-control" style="border:1px solid black" />
							<br />
							<label>Icon </label>
							<input type="text" asp-for="Icon" class="form-control" style="border:1px solid black" />
							<br />
							<label>Durum</label>
							<input type="text" asp-for="Status" class="form-control" style="border:1px solid black" />
							<br />
							<label>Açıklama</label>
							<textarea rows="4" class="form-control" asp-for="Description" class="form-control" style="border:1px solid black"></textarea>
							<br />
							<button class="btn btn-primary">Hizmeti Ekle</button>
						</form>

					</div>
				</div>


			</div>
		</div>
	</div>
</div>
