@model List<Service>
@{
	ViewData["Title"] = "ServiceList";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<h4>Hizmetlerim</h4>

<div class="content">
	<div class="container-fluid">

		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title"></div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hizmetler ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td><a href="/Service/DeleteService/@item.ServiceId" class="btn btn-danger">Sil</a></td>
										<td><a href="/Service/UpdateService/@item.ServiceId" class="btn btn-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Service/CreateService" class="btn btn-info">Yeni Hizmet Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
