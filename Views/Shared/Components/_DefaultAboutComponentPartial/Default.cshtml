@model List<About>
<section id="about" class="about section">
	<!-- Section Title -->
	<div class="container section-title" data-aos="fade-up">
		<h2>Hakkımda</h2>
		<p></p>
	</div><!-- End Section Title -->
	<div class="container" data-aos="fade-up" data-aos-delay="100">

		<div class="row gy-4 justify-content-left">
			@foreach (var item in Model)
			{
				<div class="col-lg-12 content">
					<h2>@item.Title</h2>
					<p class="fst-italic py-3">
						@item.Summary
					</p>
					<div class="row">
						<div class="col-lg-6">
							<ul>
								<li><i class="bi bi-chevron-right"></i> <strong>Website:</strong> <span>@item.Website</span></li>
								<li><i class="bi bi-chevron-right"></i> <strong>Telefon:</strong> <span>@item.Phone</span></li>
								<li><i class="bi bi-chevron-right"></i> <strong>Şehir:</strong> <span>@item.City</span></li>
							</ul>
						</div>
						<div class="col-lg-6">
							<ul>
								<li><i class="bi bi-chevron-right"></i> <strong>Yaş:</strong> <span>@item.Age</span></li>
								<li><i class="bi bi-chevron-right"></i> <strong>Derece:</strong> <span>@item.Degree</span></li>
								<li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@item.Email</span></li>
								<li><i class="bi bi-chevron-right"></i> <strong>Freelance:</strong> <span>@(item.Freelance ? "Available" : "None")</span></li>
							</ul>
						</div>
					</div>
					<p class="py-3">
					</p>
				</div>
			}
		</div>
	</div>
</section>   