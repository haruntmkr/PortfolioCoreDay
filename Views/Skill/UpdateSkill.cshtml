@model Skill
@{
    ViewData["Title"] = "UpdateSkill";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Yetenek Güncelleme Sayfası</h1>
<form method="post">
    <label>Ad Soyad</label>
    <input type="text" asp-for="SkillName" class="form-control" style="border:1px solid black" />
    <label>Referans Unvan</label>
    <input type="text" asp-for="SkillValue" class="form-control" style="border:1px solid black" />
    <br />
    <button class="btn btn-success">Yeteneği Güncelle</button>
</form>
